{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["src"]
}
